<resources >
    <style name="Theme.Escape" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:statusBarColor">#CBF4F1</item>
    </style>

    <style name="Theme.Escape.Splash" parent="Theme.SplashScreen">
        <!-- Set the background color -->
        <item name="windowSplashScreenBackground">@color/OffBlack</item>
        <!-- Set the logo -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/square_icon</item>
        <!-- Customize the icon animation duration -->
        <item name="windowSplashScreenAnimationDuration">500</item>
        <!-- Set the status bar color -->
        <item name="postSplashScreenTheme">@style/Theme.Escape</item>
    </style>
</resources>