<resources >
    <style name="Theme.EscapeLauncher" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:statusBarColor">#CBF4F1</item>
    </style>

    <style name="Theme.EscapeLauncher.Splash" parent="Theme.SplashScreen">
        <!-- Set the background color -->
        <item name="windowSplashScreenBackground">@color/splash_background</item>
        <!-- Set the logo -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/square_icon</item>
        <!-- Customize the icon animation duration -->
        <item name="windowSplashScreenAnimationDuration">500</item>
        <!-- Set the status bar color -->
        <item name="postSplashScreenTheme">@style/Theme.EscapeLauncher</item>
    </style>
</resources>